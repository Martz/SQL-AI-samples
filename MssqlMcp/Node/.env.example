# MSSQL MCP Server Environment Variables
# Copy this file to .env and update the values for your environment

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Azure SQL Server name (without https://)
# Example: myserver.database.windows.net
SERVER_NAME=your-server-name.database.windows.net

# Database name
DATABASE_NAME=your-database-name

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Authentication method selection
# Set to "true" to use SQL Server authentication (username/password)
# Set to "false" or omit to use Azure Active Directory authentication (default)
USE_USERNAME_PASSWORD=false

# SQL Server Authentication (only required if USE_USERNAME_PASSWORD=true)
# SQL_USERNAME=your-sql-username
# SQL_PASSWORD=your-sql-password

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Server operation mode
# Set to "true" to restrict to read-only operations
# Set to "false" for full read/write access (default)
READONLY=false

# Connection timeout in seconds (default: 30)
CONNECTION_TIMEOUT=30

# Trust server certificate
# Set to "true" to trust self-signed server certificates
# Useful for development or when connecting to servers with self-signed certs
# Set to "false" for production environments (default)
TRUST_SERVER_CERTIFICATE=false

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Azure Active Directory Authentication (recommended for production)
# SERVER_NAME=mycompany-prod.database.windows.net
# DATABASE_NAME=ProductionDB
# READONLY=true

# Example 2: SQL Server Authentication (username/password)
# SERVER_NAME=mycompany-dev.database.windows.net
# DATABASE_NAME=DevelopmentDB
# USE_USERNAME_PASSWORD=true
# SQL_USERNAME=devuser
# SQL_PASSWORD=your-secure-password
# READONLY=false

# Example 3: Development with self-signed certificate
# SERVER_NAME=localhost
# DATABASE_NAME=TestDB
# USE_USERNAME_PASSWORD=true
# SQL_USERNAME=sa
# SQL_PASSWORD=your-local-password
# TRUST_SERVER_CERTIFICATE=true
# CONNECTION_TIMEOUT=60
